@page
@model Ejercicio5.Pages.Tareas.IndexModel
@{
    ViewData["Title"] = "Crear Tarea";
}

<h1>Crear Tarea</h1>

<h4>Tarea</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Tarea.Titulo" class="control-label"></label>
                <input asp-for="Tarea.Titulo" class="form-control" />
                <span asp-validation-for="Tarea.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarea.Descripcion" class="control-label"></label>
                <input asp-for="Tarea.Descripcion" class="form-control" />
                <span asp-validation-for="Tarea.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarea.Completada" class="control-label"></label>
                <input asp-for="Tarea.Completada" class="form-control" />
                <span asp-validation-for="Tarea.Completada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver a la lista</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}