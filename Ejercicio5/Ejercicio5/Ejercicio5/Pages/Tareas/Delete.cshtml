@page
@model Ejercicio5.Pages.Tareas.DeleteModel
@{
    ViewData["Title"] = "Delete Task";
}

<h1>Delete Task</h1>

<h4>Task</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Date Created
        </dt>
        <dd class="col-sm-10">
            @Model.DateCreated
        </dd>
        <dt class="col-sm-2">
            Completed
        </dt>
        <dd class="col-sm-10">
            @Model.IsCompleted
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
